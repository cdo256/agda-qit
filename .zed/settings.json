{
    "load_direnv": "shell_hook",
    "lsp": {
        "texlab": {
            "settings": {
                "texlab": {
                    "build": {
                        "executable": "make",
                        "args": ["all"],
                        "onSave": true,
                        "forwardSearchAfter": false
                    },
                    "auxDirectory": "out"
                }
            }
        }
    },
    "languages": {
        "LaTeX": {
            "preferred_line_length": 80,
            "soft_wrap": "none"
        }
    }
}
